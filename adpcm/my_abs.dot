digraph my_abs {
    rankdir=TB;
    node [shape=box, fontname=Arial];
    edge [fontname=Arial];

    start [label="Start", shape=ellipse];
    end [label="End", shape=ellipse];
    cond [label="if (n >= 0)", shape=diamond];
    assign_pos [label="m = n"];
    assign_neg [label="m = -n"];
    return_stmt [label="return m"];

    start -> cond;
    cond -> assign_pos [label="True"];
    cond -> assign_neg [label="False"];
    assign_pos -> return_stmt;
    assign_neg -> return_stmt;
    return_stmt -> end;
}